<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F5F5DC"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#8DEEEE"
        >
    </RelativeLayout>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_time_text1"
        android:textSize="@dimen/word_small"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_time_text2"
        android:textSize="@dimen/word_small"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_time_text3"
        android:textSize="@dimen/word_small"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_time_text4"
        android:textSize="@dimen/word_micro"
        android:textColor="#000000"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    
    <Button 
		android:id="@+id/choose_time_button1"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:background="@drawable/round_button_orange"
		android:textSize="@dimen/word_small"
		android:textColor="#ffffff"
		android:layout_gravity="center"
		android:layout_marginTop="50dp"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:gravity="center"
		/>
    
    <Button 
		android:id="@+id/choose_time_button2"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:background="@drawable/round_button_orange"
		android:textSize="@dimen/word_small"
		android:textColor="#ffffff"
		android:layout_gravity="center"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:gravity="center"
		/>
    
    <Button 
		android:id="@+id/choose_time_button3"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:background="@drawable/round_button_orange"
		android:textSize="@dimen/word_small"
		android:textColor="#ffffff"
		android:layout_gravity="center"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:gravity="center"
		/>

</LinearLayout>