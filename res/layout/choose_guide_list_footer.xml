<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp" 
    android:background="#00000000"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:background="#ffffff"
        >
        
        <TextView 
	        android:id="@+id/choose_guide_list_footer_text1"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="15sp"
			android:layout_centerHorizontal="true"
			android:text="@string/choose_guide_text2"
			android:layout_marginTop="10dp"
	        />
	    
	    <ImageView
	        android:id="@+id/choose_guide_list_footer_image"
	        android:layout_width="wrap_content"
	        android:layout_height="75dp"
	        android:layout_below="@+id/choose_guide_list_footer_text1"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:contentDescription="@string/app_name"
	        android:src="@drawable/help_self" />
	    
	    <TextView 
	        android:id="@+id/choose_guide_list_footer_text2"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="12sp"
			android:layout_marginTop="1dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:text="@string/choose_guide_text3"
			android:layout_alignTop="@+id/choose_guide_list_footer_image"
			android:layout_toRightOf="@+id/choose_guide_list_footer_image"
	        />
	    
	    <TextView 
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="12sp"
			android:layout_marginRight="10dp"
			android:text="@string/choose_guide_text4"
			android:layout_below="@+id/choose_guide_list_footer_text2"
			android:layout_alignLeft="@+id/choose_guide_list_footer_text2"
	        />
	    
	    <View 
	        android:id="@+id/choose_guide_list_footer_view"
	        android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#000000"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="10dp"
			android:layout_below="@+id/choose_guide_list_footer_image"
	        />
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
			android:layout_height="70dp"
			android:layout_below="@+id/choose_guide_list_footer_view"
	        >
	        
	        <Button 
				android:id="@+id/choose_guide_list_footer_button"
				android:layout_width="60dp"
				android:layout_height="30dp"
				android:background="@drawable/round_button_orange"
				android:textSize="15sp"
				android:text="@string/choose_guide_text5"
				android:textColor="#ffffff"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="10dp"
				/>
	        
	    </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>
